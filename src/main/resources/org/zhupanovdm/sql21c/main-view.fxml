<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" prefHeight="344.0" prefWidth="446.0" spacing="20.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.zhupanovdm.sql21c.ui.UiController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <HBox prefHeight="15.0" prefWidth="406.0">
      <children>
         <Label text="Mapping file" />
         <TextField fx:id="fieldMappingFile" HBox.hgrow="ALWAYS">
            <HBox.margin>
               <Insets left="20.0" />
            </HBox.margin>
         </TextField>
      </children>
   </HBox>
   <SplitPane dividerPositions="0.5" maxHeight="1.7976931348623157E308" prefHeight="200.0" prefWidth="200.0">
      <items>
         <VBox prefHeight="200.0" prefWidth="100.0">
            <children>
            
                <Label text="Script" />
               <TextArea fx:id="textScript" prefHeight="200.0" prefWidth="200.0" />
            </children>
         </VBox>
         <VBox prefHeight="200.0" prefWidth="100.0">
            <children>
               <Label text="Result" />
               <TextArea fx:id="textResult" prefHeight="200.0" prefWidth="200.0" />
               <Label fx:id="labelStatus" text="OK" />
            </children>
         </VBox>
      </items>
   </SplitPane>
    <Button onAction="#onTransformButtonClick" text="Transform" />
</VBox>
